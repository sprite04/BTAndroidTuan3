<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set background-->
    <solid
        android:color="@color/white" >
    </solid>

    <!-- set color and border thickness -->
    <stroke
        android:width="1dp"
        android:color="#D3CFCF" >
    </stroke>

    <!-- set padding-->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" >
    </padding>

    <!-- set radius -->
    <corners
        android:radius="5dp" >
    </corners>

</shape>